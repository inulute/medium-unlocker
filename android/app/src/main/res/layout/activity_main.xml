<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="40dp">

            <!-- Top Bar with Support and GitHub -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="end"
                android:orientation="horizontal">

                <!-- Support Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/supportButton"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Support"
                    app:icon="@drawable/ic_heart"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="20dp"
                    app:iconTint="@color/primary" />

                <!-- GitHub Icon Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/githubButton"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="View on GitHub"
                    app:icon="@drawable/ic_github"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="20dp"
                    app:iconTint="@color/primary" />

            </LinearLayout>

            <!-- Hero Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="-0.02"
                android:lineSpacingMultiplier="0.9"
                android:text="Medium\nUnlocker."
                android:textColor="@color/text_primary"
                android:textSize="56sp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6dp"
                android:text="Break free from paywalls.\nRead any Medium article without limits."
                android:textColor="@color/text_secondary"
                android:textSize="18sp" />

            <!-- URL Input Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/card"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/border"
                app:strokeWidth="1dp"
                app:contentPadding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Paste Medium URL here..."
                        app:boxBackgroundColor="@color/secondary"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeColor="@color/border_light"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconDrawable="@android:drawable/ic_menu_close_clear_cancel"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/text_secondary"
                        app:hintTextColor="@color/text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/urlInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:imeOptions="actionGo"
                            android:inputType="textUri"
                            android:maxLines="3"
                            android:minHeight="64dp"
                            android:paddingStart="20dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Button Group -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:weightSum="2">

                        <!-- About Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/aboutButton"
                            style="@style/Widget.App.Button.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="About"
                            android:textSize="15sp" />

                        <!-- Unlock Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/unlockButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="Unlock Article"
                            android:textAllCaps="false"
                            android:textColor="@color/background"
                            android:textSize="15sp"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="16dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/border"
                app:strokeWidth="1dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="How it works"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="6dp"
                        android:text="• Share any Medium article to this app\n• Or paste the URL above\n• Automatically routes through freedium.cfd\n• Enjoy unlimited reading!"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Powered By Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:fontFamily="monospace"
                android:text="Powered by freedium.cfd"
                android:textColor="@color/text_muted"
                android:textSize="11sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
