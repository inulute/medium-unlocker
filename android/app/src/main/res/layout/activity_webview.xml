<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.App.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:navigationIconTint="@color/text_primary" />

    <!-- Progress Bar -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:indeterminate="false"
        android:visibility="gone"
        app:indicatorColor="@color/accent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:trackColor="@color/border"
        app:trackCornerRadius="2dp" />

    <!-- WebView -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar" />

    <!-- Error Layout -->
    <ScrollView
        android:id="@+id/errorLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="-0.01"
                android:text="Oops!"
                android:textColor="@color/text_primary"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:text="@string/error_message"
                android:textAlignment="center"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <!-- Network Blocking Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/blockingInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/accent"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="ðŸ”’ Network Blocking Detected"
                        android:textColor="@color/accent"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp"
                        android:text="Your network provider is blocking freedium.cfd. Attempting to bypass using proxy servers..."
                        android:textColor="@color/text_secondary"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/proxyStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="âš™ï¸ Trying proxy method..."
                        android:textColor="@color/accent_light"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Proxy Method Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tryProxyButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"
                android:text="Try Proxy Servers"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:visibility="gone"
                app:backgroundTint="@color/accent"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_rotate"
                app:iconGravity="start"
                app:iconTint="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tryAlternativeButton"
                style="@style/Widget.App.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="Try Alternative Method"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:visibility="gone"
                app:icon="@android:drawable/ic_menu_compass"
                app:iconGravity="start"
                app:iconTint="@color/text_secondary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/retryButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Retry"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:backgroundTint="@color/accent"
                app:cornerRadius="14dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
